{
  "name": "beaudar",
  "version": "1.0.0",
  "description": "Chinese version of 'utterances'.",
  "private": true,
  "license": "MIT",
  "keywords": [
    "github",
    "comments-widget",
    "comments",
    "blog"
  ],
  "homepage": "https://beaudar.lipk.org",
  "bugs": "https://github.com/beaudar/beaudar/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/beaudar/beaudar.git"
  },
  "scripts": {
    "start": "vite serve --config vite.dev-server.config.js --host",
    "build": "npm run build-html && npm run build-script",
    "build-html": "vite build --config vite.build-html.config.js",
    "build-script": "vite build --config vite.build-script.config.js",
    "lint": "tslint --project tsconfig.json",
    "predeploy": "yarn run build && echo beaudar.lipk.org > dist/CNAME",
    "deploy": "gh-pages --dist dist"
  },
  "engines": {
    "node": "16"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "gh-pages": "^3.1.0",
    "postcss": "8.2.13",
    "postcss-custom-properties": "^12.0.1",
    "postcss-import": "^14.0.2",
    "postcss-url": "^10.1.3",
    "posthtml-expressions": "^1.7.1",
    "posthtml-include": "^1.6.0",
    "posthtml-md": "^1.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "vite": "2.6.4"
  },
  "dependencies": {
    "@github/text-expander-element": "^2.2.2"
  }
}
