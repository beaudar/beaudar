{
  "name": "beaudar",
  "version": "1.0.0",
  "description": "Chinese version of 'utterances'.",
  "private": true,
  "license": "MIT",
  "keywords": [
    "github",
    "comments-widget",
    "comments",
    "blog"
  ],
  "homepage": "https://beaudar.lipk.org",
  "bugs": "https://github.com/beaudar/beaudar/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/beaudar/beaudar.git"
  },
  "scripts": {
    "start": "vite serve src --config vite.config.ts",
    "build": "parcel build src/*.html src/client.ts --experimental-scope-hoisting",
    "lint": "tslint --project tsconfig.json",
    "predeploy": "yarn run build && echo beaudar.lipk.org > dist/CNAME",
    "deploy": "gh-pages --dist dist"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "gh-pages": "^3.1.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-clean-dist": "^0.0.6",
    "posthtml-expressions": "^1.7.1",
    "posthtml-include": "^1.6.0",
    "posthtml-md": "^1.1.0",
    "sass": "^1.32.12",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "vite": "2.6.4",
    "vite-plugin-posthtml": "^0.0.3"
  }
}
